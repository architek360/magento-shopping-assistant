<?xml version="1.0"?>
<config>
    <modules>
        <Meanbee_ShoppingAssistant>
            <version>1.0.0</version>
        </Meanbee_ShoppingAssistant>
    </modules>
    <global>
        <helpers>
            <meanbee_shoppingassistant>
                <class>Meanbee_ShoppingAssistant_Helper</class>
            </meanbee_shoppingassistant>
        </helpers>
        <models>
            <meanbee_shoppingassistant>
                <class>Meanbee_ShoppingAssistant_Model</class>
                <resourceModel>meanbee_shoppingassistant_resource</resourceModel>
            </meanbee_shoppingassistant>
            <meanbee_shoppingassistant_resource>
                <class>Meanbee_ShoppingAssistant_Model_Resource</class>
                <entities>
                    <request>
                        <table>meanbee_shoppingassistant_request</table>
                    </request>
                </entities>
            </meanbee_shoppingassistant_resource>
        </models>
        <resources>
            <meanbee_shoppingassistant_setup>
                <setup>
                    <module>Meanbee_ShoppingAssistant</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </meanbee_shoppingassistant_setup>
        </resources>
    </global>

    <frontend>
        <layout>
            <updates>
                <meanbee_shoppingassistant>
                    <file>meanbee/shoppingassistant.xml</file>
                </meanbee_shoppingassistant>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <meanbee_shoppingassistant translate="title">
                                            <title>Shopping Assistant</title>
                                            <sort_order>0</sort_order>
                                        </meanbee_shoppingassistant>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
